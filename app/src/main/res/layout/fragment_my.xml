<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.MYFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_MY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_MYTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_MY"
            android:textColor="@color/white"
            android:textSize="16dp"/>

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_my_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:text="姓名：xxx"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/txt_my_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:text="省份：湖北省"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/txt_my_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:text="分数：xxx"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/txt_my_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:text="选修：物理"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/txt_my_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:text="测试：未完成"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:drawableRight="@drawable/ic_right_arrow"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>